<?xml version="1.0"?>
<block>
  <name>DAB: DAB+ Audio Decoder</name>
  <key>dab_dabplus_audio_decoder_ff</key>
  <category>DAB</category>
  <import>import dab</import>
  <make>dab.dabplus_audio_decoder_ff($dab_params, $bit_rate, $address, $subch_size, $protection, $output_float, $verbose, $debug)</make>
  <param>
    <name>DAB parameter</name>
    <key>dab_params</key>
    <type>raw</type>
  </param>
  <param>
    <name>Bit rate</name>
    <key>bit_rate</key>
    <type>int</type>
  </param>
  <param>
    <name>Subchannel address</name>
    <key>address</key>
    <type>int</type>
  </param>
  <param>
    <name>Subchannel size</name>
    <key>size</key>
    <type>int</type>
  </param>
  <param>
    <name>Protection mode</name>
    <key>protection</key>
    <type>int</type>
    <option>
    	<name>A1</name>
    	<key>0</key>
    </option>
    <option>
    	<name>A2</name>
    	<key>1</key>
    </option>
    <option>
    	<name>A3</name>
    	<key>2</key>
    </option>
    <option>
    	<name>A4</name>
    	<key>3</key>
    </option>
  </param>
  <param>
    <name>Output type</name>
    <key>output_float</key>
    <type>bool</type>
    <option>
    	<name>Float</name>
    	<key>True</key>
    </option>
    <option>
    	<name>16 bit signed int</name>
    	<key>False</key>
    </option>
  </param>
  <param>
    <name>Verbose</name>
    <key>verbose</key>
    <type>bool</type>
    <option>
    	<name>True</name>
    	<key>True</key>
    </option>
    <option>
    	<name>False</name>
    	<key>False</key>
    </option>
  </param>
  <param>
    <name>Debug</name>
    <key>debug</key>
    <type>bool</type>
    <option>
    	<name>True</name>
    	<key>True</key>
    </option>
    <option>
    	<name>False</name>
    	<key>False</key>
    </option>
  </param>
  <sink>
    <name>data</name>
    <type>float</type>
  </sink>
  <sink>
    <name>trigger</name>
    <type>byte</type>
  </sink>
  <if>
    <condition> $output_float = True</condition>
    <statements>
      <source>
        <name>pcm_left</name>
        <type>float</type>
      </source>
      <source>
        <name>pcm_right</name>
        <type>float</type>
      </source>
    </statements>
  </if>
  <else>
    <statements>
      <source>
        <name>pcm_left</name>
        <type>short</type>
      </source>
      <source>
        <name>pcm_right</name>
        <type>short</type>
      </source>
    </statements>
  </else>
</block>
